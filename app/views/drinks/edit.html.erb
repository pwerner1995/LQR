<h1>Editing <%= @drink.name %>:</h1>
<%= form_for @drink do |f| %>
 <%= f.label :name %>
 <%= f.text_field :name %>
 <%= f.label :price %>
 <%= f.text_field :price %>
 <%= f.submit %>
<% end %>
<div>
<% if @drink.errors.any? %>
 <div id=“error_explanation”>
   <h2>
     <%= pluralize(@drink.errors.count, “error”) %>
     prohibited this drink from being edited:
   </h2>
   <ul>
   <% @drink.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
   <% end %>
   </ul>
 </div>
<% end %>
</div>